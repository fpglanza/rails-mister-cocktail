<h1><%= @cocktail.name.titleize %></h1>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.ingredient.name %>
  <%= dose.description %>
<%= link_to 'delete',  dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
</p>
<% end %>
<%= link_to 'add ingredient', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'back', cocktails_path %>
